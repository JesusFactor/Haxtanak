</item>

<item android:top="16dp">
    <shape android:shape="rectangle" >
        <corners
            android:bottomLeftRadius="100dp"
            android:bottomRightRadius="100dp"/>
        <size android:height="16dp" />
        <solid android:color="@color/blue" /> <!-- green -->
    </shape>
</item>
</layer-list>
